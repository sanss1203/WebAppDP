    <!-- /Bagian Title kontent pada body website -->
    <!-- Container untuk contact -->
    <section class="w3l-contact" id="contact">
        <div class="contact-infubd py-5">
            <div class="container py-lg-3">
                <div class="contact-grids row">
                    <!-- Grid di sebelah kanan yang memuat informasi tentang kontak -->
                    <div class="col-lg-6 contact-left">
                        <div class="partners">
                            <div class="cont-details">
                                <p class="mt-3 mb-4">
                                    Hi, silahkan kirimkan pesan di email, gunakan nomor HP kami dibawah ini, atau
                                    kirimkan pesan lewat form di samping ini.
                                </p>
                            </div>
                            <div class="hours">
                                <h6 class="mt-4">Visit Us:</h6>
                                <p> Alamat .</p>
                                <h6 class="mt-4">Contact:</h6>
                                <p class="margin-top">+6288242183026</p>
                            </div>
                        </div>
                    </div>
                    <!-- Grid sebelah kanan untuk mengirim Pesan  -->
                    <div class="col-lg-6 mt-lg-0 mt-5 contact-right">
                        <div class="input-grids">
                            @using (Html.BeginForm("Message", "Home", FormMethod.Post, new { @enctype = "multipart/form-data", id = "myForm" }))
                            {
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.NamaPengirim, new { @class = "contact-input", id = "namaPengirim", placeholder = "Your Name*", required = "" })
                                    @Html.ValidationMessageFor(model => model.NamaPengirim)
                                </div>

                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.EmailPengirim, new { @class = "contact-input", id = "emailPengirim", placeholder = "Email*", required = "" })
                                    @Html.ValidationMessageFor(model => model.EmailPengirim)
                                </div>

                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.Subject, new { @class = "contact-input", id = "subjectPengirim", placeholder = "Subject*", required = "" })
                                    @Html.ValidationMessageFor(model => model.Subject)
                                </div>

                                <div class="form-group">
                                    @Html.TextAreaFor(model => model.Pesan, new { @class = "contact-input", id = "pesanPengirim", placeholder = "Your Message*", required = "" })
                                    @Html.ValidationMessageFor(model => model.Pesan)
                                </div>

                                <div class="text-right">
                                    <button type="submit" class="btn btn-primary theme-button" id="btnSubmit">Buat Pesanan</button>
                                </div>
                                <!-- Konfirmasi apakah ingin mengirim pesan -->
                                <script>
                                    $(document).ready(function () {
                                        $('#btnSubmit').click(function (e) {
                                            e.preventDefault(); 
                                            var isValid = true;
                                            $('#myForm input[required]').each(function () {
                                                if ($.trim($(this).val()) == '') {
                                                    isValid = false;
                                                    return false;
                                                }
                                            });
                                            if (isValid) {
                                                if (confirm('Apakah Anda yakin ingin pesan ini?')) {
                                                    $('#myForm').submit(); // submit the form
                                                    alert('Pesan berhasil terkirim');
                                                }
                                            } else {
                                                alert('Harap isi semua field yang diperlukan.');
                                            }
                                        });
                                    });
                                </script>
                            }
                        </div>
                    </div>
